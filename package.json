{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "start": "vite preview",
        "dev:app": "php artisan serve --host=127.0.0.1 --port=8004",
        "dev:worker": "php artisan queue:work --tries=3 --timeout=120 --sleep=1 --backoff=3",
        "dev:full": "concurrently -n APP,VITE,WORKER -c green,cyan,magenta \"npm:dev:app\" \"npm:dev\" \"npm:dev:worker\""
    },

    "devDependencies": {
        "@popperjs/core": "^2.11.6",
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-vue": "^4.5.0",
        "axios": "^1.13.2",
        "bootstrap": "^5.2.3",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.0.5",
        "sass": "^1.56.1",
        "tailwindcss": "^4.0.0",
        "vite": "^5.4.21",
        "vue": "^3.2.37"
    },
    "dependencies": {
        "@fullcalendar/core": "^6.1.19",
        "@fullcalendar/daygrid": "^6.1.19",
        "@fullcalendar/interaction": "^6.1.19",
        "@fullcalendar/timegrid": "^6.1.19",
        "@fullcalendar/vue3": "^6.1.19"
    }
}
